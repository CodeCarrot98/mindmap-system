<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NotebookLM Style Mind Map</title>
    <script src="https://unpkg.com/react@18/umd/react.development.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.development.js"></script>
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body { margin: 0; overflow: hidden; background-color: #f8fafc; }
        #root { width: 100vw; height: 100vh; }
        
        /* NotebookLM Style Nodes */
        .mindmap-node {
            padding: 12px 24px;
            background: white;
            border-radius: 9999px;
            box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
            border: 2px solid transparent;
            transition: all 0.2s ease;
            cursor: pointer;
            min-width: 140px;
            text-align: center;
            font-weight: 500;
            color: #1e293b;
            animation: popIn 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
            opacity: 0;
        }

        @keyframes popIn {
            from { opacity: 0; transform: scale(0.5) translateY(20px); }
            to { opacity: 1; transform: scale(1) translateY(0); }
        }

        .mindmap-node:hover { transform: translateY(-2px); shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1); }
        .mindmap-node.selected { border-color: #3b82f6; background: #eff6ff; }

        /* Smooth curved lines for connectors */
        .connector {
            fill: none;
            stroke: #cbd5e1;
            stroke-width: 2;
            transition: all 0.3s ease;
        }

        .sidebar {
            position: fixed; right: 0; top: 0; bottom: 0; width: 350px;
            background: white; border-left: 1px solid #e2e8f0; padding: 24px;
            transform: translateX(100%); transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            z-index: 50;
        }
        .sidebar.open { transform: translateX(0); }
    </style>
</head>
<body>
    <div id="root"></div>

    <script type="text/babel">
        const { useState, useEffect, useCallback } = React;

        const App = () => {
            // State for nodes
            const [nodes, setNodes] = useState([
                { id: 'root', label: 'Main Topic', note: '', x: window.innerWidth/2 - 70, y: 80, depth: 0, parentId: null }
            ]);
            const [selectedId, setSelectedId] = useState(null);
            const [sidebarOpen, setSidebarOpen] = useState(false);

            const selectedNode = nodes.find(n => n.id === selectedId);

            // --- FUNCTIONS ---

            const addChild = () => {
                if (!selectedId) return;
                const parent = nodes.find(n => n.id === selectedId);
                const newId = 'node-' + Math.random().toString(36).substr(2, 9);
                
                // Position logic: Place it below the parent with some random horizontal offset
                const newNode = {
                    id: newId,
                    label: 'New Idea',
                    note: '',
                    x: parent.x + (Math.random() * 300 - 150),
                    y: parent.y + 120,
                    depth: parent.depth + 1,
                    parentId: selectedId
                };
                setNodes([...nodes, newNode]);
            };

            const deleteNode = (keepChildren) => {
                if (!selectedId || selectedId === 'root') return;
                
                const nodeToDelete = nodes.find(n => n.id === selectedId);
                const parentId = nodeToDelete.parentId;

                if (keepChildren) {
                    // Orphan logic: reconnect children to the grandparent
                    setNodes(nodes.filter(n => n.id !== selectedId).map(n => {
                        if (n.parentId === selectedId) return { ...n, parentId: parentId, y: n.y - 50 };
                        return n;
                    }));
                } else {
                    // Deep delete: remove node and all descendants
                    const getDescendantIds = (id) => {
                        let ids = [id];
                        nodes.filter(n => n.parentId === id).forEach(n => {
                            ids = [...ids, ...getDescendantIds(n.id)];
                        });
                        return ids;
                    };
                    const toDelete = getDescendantIds(selectedId);
                    setNodes(nodes.filter(n => !toDelete.includes(n.id)));
                }
                setSelectedId(null);
                setSidebarOpen(false);
            };

            const exportMap = () => {
                const blob = new Blob([JSON.stringify(nodes, null, 2)], { type: 'application/json' });
                const url = URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = 'mindmap.json';
                a.click();
            };

            const importMap = (e) => {
                const reader = new FileReader();
                reader.onload = (event) => {
                    setNodes(JSON.parse(event.target.result));
                };
                reader.readAsText(e.target.files[0]);
            };

            return (
                <div className="h-full w-full relative">
                    {/* Toolbar */}
                    <div className="absolute top-6 left-6 z-20 flex gap-3 flex-wrap">
                        <button onClick={addChild} className="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-full shadow-lg transition flex items-center gap-2">
                             + Add Child
                        </button>
                        <button onClick={() => deleteNode(true)} className="bg-white border border-gray-200 hover:bg-gray-50 text-gray-700 px-4 py-2 rounded-full shadow-sm transition">
                            Delete (Save Children)
                        </button>
                        <button onClick={() => deleteNode(false)} className="bg-red-50 hover:bg-red-100 text-red-600 px-4 py-2 rounded-full shadow-sm transition">
                            Delete Branch
                        </button>
                        <div className="w-px h-8 bg-gray-200 mx-2"></div>
                        <button onClick={exportMap} className="bg-white border border-gray-200 hover:bg-gray-50 text-gray-700 px-4 py-2 rounded-full shadow-sm transition">
                            Export JSON
                        </button>
                        <label className="bg-white border border-gray-200 hover:bg-gray-50 text-gray-700 px-4 py-2 rounded-full shadow-sm transition cursor-pointer">
                            Import JSON
                            <input type="file" className="hidden" onChange={importMap} accept=".json" />
                        </label>
                    </div>

                    {/* SVG Layer for Connections */}
                    <svg className="absolute inset-0 w-full h-full pointer-events-none">
                        {nodes.map(node => {
                            const parent = nodes.find(n => n.id === node.parentId);
                            if (!parent) return null;
                            
                            // Calculate a simple Bezier curve path
                            const midY = (parent.y + node.y + 50) / 2;
                            const path = `M ${parent.x + 70} ${parent.y + 25} 
                                          C ${parent.x + 70} ${midY}, 
                                            ${node.x + 70} ${midY}, 
                                            ${node.x + 70} ${node.y + 25}`;
                            return (
                                <path key={`edge-${node.id}`} d={path} className="connector" />
                            );
                        })}
                    </svg>

                    {/* Nodes Layer */}
                    <div className="absolute inset-0">
                        {nodes.map(node => (
                            <div 
                                key={node.id}
                                className={`mindmap-node absolute ${selectedId === node.id ? 'selected' : ''}`}
                                style={{ 
                                    left: node.x, 
                                    top: node.y,
                                    animationDelay: `${node.depth * 0.1}s`
                                }}
                                onClick={() => {
                                    setSelectedId(node.id);
                                    setSidebarOpen(true);
                                }}
                            >
                                {node.label}
                                {node.note && <div className="text-[10px] text-blue-500 mt-1">● Has Note</div>}
                            </div>
                        ))}
                    </div>

                    {/* Note Sidebar */}
                    <div className={`sidebar ${sidebarOpen ? 'open' : ''}`}>
                        <div className="flex justify-between items-center mb-8">
                            <h2 className="text-xl font-bold text-gray-800">Edit Thought</h2>
                            <button onClick={() => setSidebarOpen(false)} className="p-2 hover:bg-gray-100 rounded-full">✕</button>
                        </div>

                        {selectedNode ? (
                            <div className="space-y-6">
                                <div>
                                    <label className="text-xs font-semibold text-gray-400 uppercase tracking-wider">Label</label>
                                    <input 
                                        className="w-full mt-2 p-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none"
                                        value={selectedNode.label}
                                        onChange={(e) => setNodes(nodes.map(n => n.id === selectedId ? {...n, label: e.target.value} : n))}
                                    />
                                </div>
                                <div>
                                    <label className="text-xs font-semibold text-gray-400 uppercase tracking-wider">Detailed Notes</label>
                                    <textarea 
                                        className="w-full mt-2 p-3 bg-gray-50 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none h-64 resize-none"
                                        placeholder="Add more context here..."
                                        value={selectedNode.note}
                                        onChange={(e) => setNodes(nodes.map(n => n.id === selectedId ? {...n, note: e.target.value} : n))}
                                    />
                                </div>
                            </div>
                        ) : (
                            <p className="text-gray-400 text-center mt-20">Select a node to edit</p>
                        )}
                    </div>

                    {/* Hint */}
                    <div className="absolute bottom-6 left-1/2 -translate-x-1/2 text-gray-400 text-sm">
                        Click a node to edit or add branches
                    </div>
                </div>
            );
        };

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>

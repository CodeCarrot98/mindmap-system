<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interactive Mind Map</title>
    
    <script src="https://unpkg.com/react@18/umd/react.production.min.js" crossorigin></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js" crossorigin></script>
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>

    <style>
        body { margin: 0; overflow: hidden; background-color: #f8fafc; font-family: sans-serif; }
        #root { width: 100vw; height: 100vh; }
        .mindmap-node {
            padding: 10px 20px; background: white; border-radius: 50px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.05); position: absolute;
            cursor: pointer; min-width: 120px; text-align: center;
            border: 2px solid transparent; transition: all 0.2s; z-index: 10;
        }
        .mindmap-node.selected { border-color: #3b82f6; background: #eff6ff; }
        .connector { fill: none; stroke: #cbd5e1; stroke-width: 2; }
        .sidebar {
            position: fixed; right: 0; top: 0; bottom: 0; width: 320px;
            background: white; border-left: 1px solid #e2e8f0; padding: 20px;
            transform: translateX(100%); transition: transform 0.3s ease; z-index: 50;
        }
        .sidebar.open { transform: translateX(0); }
    </style>
</head>
<body>
    <div id="root">
        <div style="display: flex; justify-content: center; align-items: center; height: 100vh; color: #64748b;">
            Loading Mind Map...
        </div>
    </div>

    <script type="text/babel">
        const { useState } = React;

        const App = () => {
            const [nodes, setNodes] = useState([
                { id: 'root', label: 'Main Topic', note: '', x: window.innerWidth/2 - 60, y: 50, depth: 0, parentId: null }
            ]);
            const [selectedId, setSelectedId] = useState(null);
            const [sidebarOpen, setSidebarOpen] = useState(false);

            const selectedNode = nodes.find(n => n.id === selectedId);

            const addChild = () => {
                if (!selectedId) return;
                const parent = nodes.find(n => n.id === selectedId);
                const newId = 'n-' + Date.now();
                const newNode = {
                    id: newId, label: 'New Idea', note: '',
                    x: parent.x + (Math.random() * 200 - 100),
                    y: parent.y + 120, depth: parent.depth + 1, parentId: selectedId
                };
                setNodes([...nodes, newNode]);
            };

            const deleteNode = (keepChildren) => {
                if (!selectedId || selectedId === 'root') return;
                const nodeToDelete = nodes.find(n => n.id === selectedId);
                if (keepChildren) {
                    setNodes(nodes.filter(n => n.id !== selectedId).map(n => 
                        n.parentId === selectedId ? { ...n, parentId: nodeToDelete.parentId } : n
                    ));
                } else {
                    const getBranch = (id) => {
                        let ids = [id];
                        nodes.filter(n => n.parentId === id).forEach(n => ids = [...ids, ...getBranch(n.id)]);
                        return ids;
                    };
                    const toDelete = getBranch(selectedId);
                    setNodes(nodes.filter(n => !toDelete.includes(n.id)));
                }
                setSelectedId(null);
                setSidebarOpen(false);
            };

            return (
                <div className="relative w-full h-full">
                    <div className="absolute top-4 left-4 z-20 flex gap-2">
                        <button onClick={addChild} className="bg-blue-600 text-white px-4 py-2 rounded-lg text-sm shadow hover:bg-blue-700">+ Child</button>
                        <button onClick={() => deleteNode(true)} className="bg-white border px-4 py-2 rounded-lg text-sm">Delete Only</button>
                        <button onClick={() => deleteNode(false)} className="bg-red-50 text-red-600 px-4 py-2 rounded-lg text-sm">Delete Branch</button>
                    </div>

                    <svg className="absolute inset-0 w-full h-full pointer-events-none">
                        {nodes.map(node => {
                            const parent = nodes.find(n => n.id === node.parentId);
                            if (!parent) return null;
                            return (
                                <path key={node.id} d={`M ${parent.x + 60} ${parent.y + 20} L ${node.x + 60} ${node.y + 20}`} className="connector" />
                            );
                        })}
                    </svg>

                    {nodes.map(node => (
                        <div 
                            key={node.id}
                            className={`mindmap-node ${selectedId === node.id ? 'selected' : ''}`}
                            style={{ left: node.x, top: node.y }}
                            onClick={() => { setSelectedId(node.id); setSidebarOpen(true); }}
                        >
                            {node.label}
                        </div>
                    ))}

                    <div className={`sidebar ${sidebarOpen ? 'open' : ''} shadow-xl`}>
                        <div className="flex justify-between items-center mb-4">
                            <h2 className="font-bold">Edit Node</h2>
                            <button onClick={() => setSidebarOpen(false)}>âœ•</button>
                        </div>
                        {selectedNode && (
                            <div className="flex flex-col gap-4">
                                <input 
                                    className="border p-2 rounded" 
                                    value={selectedNode.label} 
                                    onChange={(e) => setNodes(nodes.map(n => n.id === selectedId ? {...n, label: e.target.value} : n))} 
                                />
                                <textarea 
                                    className="border p-2 rounded h-40" 
                                    placeholder="Notes..."
                                    value={selectedNode.note} 
                                    onChange={(e) => setNodes(nodes.map(n => n.id === selectedId ? {...n, note: e.target.value} : n))} 
                                />
                            </div>
                        )}
                    </div>
                </div>
            );
        };

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>
